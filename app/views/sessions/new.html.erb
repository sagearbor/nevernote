<h3><%= t('sessions.new.heading') %></h3>
<%= form_for @user, url: sessions_path do |f| %>
  <p>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <%= f.submit t('session.new.button'), class: 'btn btn-default' %>
<% end %>
